{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "g++",
      "args": [
        "-std=gnu++17",
        "-O2", 
        "-Wall",
        "-Wextra",
        "-Iinclude",
        "-o",
        "build/taller.exe",
        "src/App.cpp",
        "src/Alumno.cpp", 
        "src/Curso.cpp",
        "src/Inscripcion.cpp",
        "src/Sistema.cpp",
        "src/LinkedLists/*.cpp",
        "src/Nodos/*.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}